<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/post_card_view"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="4dp"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/post_card"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="4dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/post_card_thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/post_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/post_card_thumbnail"
        android:text="title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/post_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_card_title"
        android:layout_marginStart="16dp"

        android:layout_toEndOf="@+id/post_card_thumbnail"
        android:text="Name" />

    <TextView
        android:id="@+id/post_card_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_card_name"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/post_card_thumbnail"
        android:text="15 April 10:30pm" />

</RelativeLayout>
</android.support.v7.widget.CardView>